szotar = {'I': 1, 'V': 5, 'X': 10, 'L': 50, 'C': 100, 'D': 500, 'M': 1000}


def romantoint(romai):
    elozo = 0
    jelenlegi = 0
    vegso = 0
    for i in range(len(romai)):
        jelenlegi = szotar[romai[i]]
        if jelenlegi > elozo:
            vegso = vegso + jelenlegi - (2 * elozo)
        else:
            vegso += jelenlegi
        elozo = jelenlegi
    return vegso


osszeg = 0
while True:
    if osszeg > 1000:
        break
    else:
        try:
            romai = input("Adj meg egy római számot: ")
            osszeg += romantoint(romai)
            print(romai, "->", romantoint(romai))
            print("összeg:", osszeg)
        except KeyError:
            print("Invalid input")
