def romanToInt(rom):
    # szotar = {'M': 1000, 'D': 500, 'C': 100, 'L': 50, 'X': 10, 'V': 5, 'I': 1}
    szotar = {'I': 1, 'IV': 4, 'V': 5, 'IX': 9, 'X': 10, 'XL': 40, 'L': 50, 'LC': 90, 'C': 100, 'CD': 400, 'D': 500, 'CM': 900, 'M': 1000}
    elozo = 0
    eredmeny = 0
    for i in range(len(rom)):
        if szotar[rom[i]] >= elozo:
            eredmeny += szotar[rom[i]]
        else:
            eredmeny -= szotar[rom[i]]

        elozo = szotar[rom[i]]
    print(eredmeny)

romaiszam = input("Adj meg egy római számot! ")
romanToInt(romaiszam)
