szotar = {'I':1, 'IV':4, 'V':5, 'IX':9, 'X':10, 'XL':40, 'L':50, 'LC':90, 'C':100, 'CD':400, 'D':500, 'CM':900, 'M':1000}

def szamkonverter(szam):
    a = None
    for key, value in szotar.items():
        if value == szam:
            return key
        if szam > value:
            a = key
        eredmeny = szam - szotar[a]
    return a + szamkonverter(eredmeny)

szam = int(input("Adj meg egy arab számot! "))
# sum = 0
# while sum < 1000:
#     szam = int(input("Adj meg egy arab számot! "))
#     sum += szam
#     break
n = szamkonverter(szam)
print(szam, "->", n)
