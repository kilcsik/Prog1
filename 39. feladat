szam = input("Adj meg egy számot! ")
osszeg = 0
a = str()
lefutas = 0
for i in szam:
    osszeg += int(i)
    a += str(i) + " + "
a = a[0:-2] + "= " + str(osszeg)
lefutas += 1
print("Összeg{}: {}".format(lefutas, a))

osszeg2 = 0
b = ""
while osszeg > 10:
    for i in str(osszeg):
        osszeg2 += int(i)
        b += str(i) + ' + '
    b = b[0:-2] + "= " + str(osszeg2)
    lefutas += 1
    print("Összeg{}: {}".format(lefutas, b))
    break

osszeg3 = 0
c = ""
while osszeg2 > 10:
    for i in str(osszeg2):
        osszeg3 += int(i)
        c += str(i) + ' + '
    c = c[0:-2] + "= " + str(osszeg3)
    lefutas += 1
    print("Összeg{}: {}".format(lefutas, c))
    break


