def Prim(n):
    if n < 2:
        return False
    for i in range(2, n):
        if n % i == 0:
            return False
    return True


def Paratlan(n):
    if n % 2 == 0:
        return False
    else:
        return True


osszegek = []
paratlan_primek = []
paratlan_primosszeg = 0

szam = input("Adj meg egy számot!: ")

while len(szam) > 1:
    osszeg = 0
    for i in range(len(szam)):
        if Paratlan(int(szam[i])) == True and Prim(int(szam[i])) == True:
            paratlan_primek.append(int(szam[i]))
        osszeg += int(szam[i])
    osszegek.append(osszeg)
    szam = str(osszeg)

for i in range(len(paratlan_primek)):
    paratlan_primosszeg += int(paratlan_primek[i])


print("Összegek: ", osszegek)
print("Páratlan prímek összege:", paratlan_primosszeg)
